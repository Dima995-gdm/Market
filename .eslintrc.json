{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-essential"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "indent": ["error", "tab"],
        "vue/html-indent": ["error", "tab"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "vue/multi-word-component-names": 0
    }
}
